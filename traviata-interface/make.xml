<project name="traviata-interface" basedir="." default="build">
	<property name="gradlebat" value="gradlew.bat"/>

	<target name="build">
		<exec executable="${gradlebat}">
			<arg value="build"/>
		</exec>
	</target>
	<target name="eclipse">
		<exec executable="${gradlebat}">
			<arg value="eclipse"/>
		</exec>
	</target>
	<target name="upload to MavenCentral">
		<exec executable="${gradlebat}">
			<arg value="build"/>
			<arg value="uploadArchives"/>
		</exec>
	</target>
	<target name="showGitRevision">
		<exec executable="${gradlebat}">
			<arg value="showGitRevision"/>
		</exec>
	</target>
	
</project>
