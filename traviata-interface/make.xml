<project name="traviata-interface" basedir="." default="build">
	<property name="gradlebat" value="gradlew.bat"/>

	<target name="build">
		<exec executable="${gradlebat}">
			<arg value="build"/>
		</exec>
	</target>
	<target name="copy lib" depends="build">
		<copy file="build/libs/traviata-interface-0.2.4-SNAPSHOT.jar" todir="C:\dat\lib"/>
		<copy file="build/libs/traviata-interface-0.2.4-SNAPSHOT-sources.jar" todir="C:\dat\lib"/>
		<copy file="build/libs/traviata-interface-0.2.4-SNAPSHOT-javadoc.jar" todir="C:\dat\lib"/>
	</target>
	<target name="eclipse">
		<exec executable="${gradlebat}">
			<arg value="eclipse"/>
		</exec>
	</target>
	<target name="upload to MavenCentral">
		<exec executable="${gradlebat}">
			<arg value="build"/>
			<arg value="uploadArchives"/>
			<arg value="-Pmavenupload"/>
		</exec>
	</target>
	
</project>
